# NEWTUBE Environment Variables Template
# Copy this file to .env and fill in your actual values

#########################################
# Application Environment
#########################################
NODE_ENV=development

#########################################
# Database Configuration
#########################################

# PostgreSQL (with pgvector)
POSTGRES_DB=newtube
POSTGRES_USER=newtube_user
POSTGRES_PASSWORD=newtube_password
DATABASE_URL=postgresql://newtube_user:newtube_password@postgres:5432/newtube

#########################################
# Cache and Session Storage
#########################################

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

#########################################
# Knowledge Graph Database
#########################################

# Neo4j (for Memento MCP)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=memento_password

#########################################
# Authentication & Security
#########################################

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here

# Clerk Authentication (https://clerk.dev)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

#########################################
# External API Keys
#########################################

# YouTube Data API v3 (https://console.developers.google.com)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Vimeo API (https://developer.vimeo.com)
VIMEO_CLIENT_ID=your_vimeo_client_id_here
VIMEO_CLIENT_SECRET=your_vimeo_client_secret_here

# OpenAI API (https://platform.openai.com)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ElevenLabs TTS (https://elevenlabs.io)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

#########################################
# Application Configuration
#########################################

# Server Ports
FRONTEND_PORT=3000
BACKEND_PORT=4000

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

#########################################
# Development Settings
#########################################

# Next.js
NEXT_TELEMETRY_DISABLED=1

# Debug and Logging
DEBUG=newtube:*
LOG_LEVEL=debug

#########################################
# Production Settings (for production builds)
#########################################

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Connection Pool
REDIS_POOL_MIN=5
REDIS_POOL_MAX=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

#########################################
# Monitoring & Analytics
#########################################

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GA_TRACKING_ID=your_google_analytics_id_here

#########################################
# Feature Flags
#########################################

# AI Features
ENABLE_AI_CURATION=true
ENABLE_VOICE_COMMANDS=true
ENABLE_COMMENT_LENS=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

#########################################
# Development Tools
#########################################

# Hot Reload
FAST_REFRESH=true
CHOKIDAR_USEPOLLING=false

# Docker Development
COMPOSE_PROJECT_NAME=newtube
COMPOSE_FILE=docker-compose.yml